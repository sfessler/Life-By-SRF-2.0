<div id="post_show_content" class="skinny_wrapper">
				<header>
					<p class="date"><%= @post.created_at.strftime("%A, %B %d") %></p>
					<h1><%= @post.title %></h1>
					<hr>
					<div id="content"><%= markdown @post.content %></div>
				</header>
				<hr>
				<br>
				<div id="share_box">
					<p class="share_post">Share Post</p>
					<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @SRF_NY - &amp;<%=url_for([@post, {only_path: false}]) %>', '_blank');void(0);"><i class="fa fa-twitter"></i></a>
					<a onclick="javascript:window.open('https://www.facebook.com/sharer/sharer.php?u=&amp;<%=url_for([@post, {only_path: false}]) %>', '_blank');void(0);"><i class="fa fa-facebook"></i></a>
					<a onclick="javascript:window.open('https://www.linkedin.com/cws/share?url=&amp;<%=url_for([@post, {only_path: false}]) %>', '_blank');void(0);"><i class="fa fa-linkedin"></i></a>
				</div>

			</div>



<br>
<br>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete?"} %>